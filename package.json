{
  "name": "reskeleton",
  "version": "0.7.0",
  "description": "React Reason skeleton component",
  "repository": "git@github.com:pedrobslisboa/reskeleton.git",
  "author": "<pedrobslisboa@gmail.com>",
  "license": "MIT",
  "files": [
    "src/*.re*",
    "bsconfig.json"
  ],
  "scripts": {
    "res:build": "rescript build #",
    "res:dev": "rescript build -w #",
    "res:format": "rescript format -all #",
    "docs": "reshowcase start --entry=docs/Reskeleton_doc.js --template=docs/index.html",
    "docs:build": "reshowcase build --entry=docs/Reskeleton_doc.js --output=.doc --template=docs/index.html",
    "prettier": "prettier src/**/*.re --write --print-width 120",
    "test": "yarn jest",
    "test-watch": "jest --watch",
    "prepare": "husky install"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ]
  },
  "lint-staged": {
    "*.res": [
      "yarn res:build",
      "yarn res:format"
    ]
  },
  "keywords": [
    "ReasonReact",
    "skeleton",
    "reason-react",
    "BuckleScript"
  ],
  "dependencies": {
    "@rescript/react": "^0.11.0",
    "bs-css": "^12.2.0",
    "bs-css-emotion": "^1.0.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.0",
    "rescript": "^10.1.4",
    "rescript-classnames": "^6.0.0",
    "reshowcase": "^5.2.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  }
}
