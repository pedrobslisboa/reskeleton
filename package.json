{
  "name": "reskeleton",
  "version": "0.4.0",
  "description": "React Reason skeleton component",
  "repository": "git@github.com:pedrobslisboa/reskeleton.git",
  "author": "<pedrobslisboa@gmail.com>",
  "license": "MIT",
  "files": [
    "src/*.re*",
    "bsconfig.json"
  ],
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w -ws _ ",
    "clean": "bsb -clean-world",
    "prettier": "prettier src/**/*.re --write --print-width 120",
    "test": "yarn jest",
    "test-watch": "jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "yarn build && build-storybook -c .storybook -o .doc"
  },
  "keywords": [
    "ReasonReact",
    "skeleton",
    "reason-react",
    "BuckleScript"
  ],
  "dependencies": {
    "bs-css": "^12.2.0",
    "bs-css-emotion": "^1.0.1",
    "bs-storybook": "^0.3.0",
    "re-classnames": "^5.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@storybook/html": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "babel-loader": "^8.1.0",
    "bs-platform": "^7.1.1"
  }
}
